<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.mapper.UserMapper">
    <insert id="insertUser" parameterType="com.github.domain.User">
        INSERT INTO User (email, password) VALUES (#{email}, #{password})
    </insert>

    <update id="updateRefreshToken" parameterType="com.github.domain.User">
        UPDATE User
        SET refreshToken = #{refreshToken}
        WHERE userId = #{userId}
    </update>

    <select id="findUserByEmail" parameterType="string" resultType="com.github.domain.User">
        SELECT * FROM User WHERE email = #{email}
    </select>
    <select id="findUserById" parameterType="java.lang.Integer" resultType="com.github.domain.User">
        SELECT * FROM User WHERE userId = #{userId}
    </select>
</mapper>
