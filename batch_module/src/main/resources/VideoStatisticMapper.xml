<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.mapper.VideoStatisticMapper">

    <!--  일간  -->
    <insert id="insertDailyStatistic" parameterType="com.github.domain.statistic.VideoStatistic">
        INSERT INTO VideoStatistic (videoId, dailyWatchedTime, dailyViewCount, dailyAdViewCount, zScore)
        VALUES (#{videoId}, #{dailyWatchedTime}, #{dailyViewCount}), #{dailyAdViewCount}, #{zScore}
    </insert>
    <update id="updateDailyStatistic" parameterType="com.github.domain.statistic.VideoStatistic">
        UPDATE VideoStatistic
        SET dailyWatchedTime = #{dailyWatchedTime},
        dailyViewCount = #{dailyViewCount},
        dailyAdViewCount = #{dailyAdViewCount},
        zScore = #{zScore}
        WHERE videoId = #{videoId}
    </update>

